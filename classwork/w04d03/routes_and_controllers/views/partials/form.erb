<!-- form for user to enter blog posts -->

<form action="/<%= post[:id] %>" method="POST">
	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="enter a Title">
	</div>
	<div>
		<label>Content</label>
		<textarea name="content" placeholder="The Content goes here"></textarea>
	</div>
	<div>
		<input type="submit" value="Save Post">
	</div>
</form>
<!-- form for user to enter blog posts -->

<form action="/<%= @post[:id] %>" method="POST">
	<div>
	<% if(@post[:id != ""]) %>
		<input type="hidden" name="_method" value="PUT">
	<% end %>
		<label>Title</label>
		<input type="text" name="title" placeholder="enter a Title" value="<%= @post[:title] %>">
	</div>
	<div>
		<label>Content</label>
		<textarea name="content" placeholder="The Content goes here"><%= @post[:content] %></textarea>
	</div>
	<div>
		<input type="submit" value="Save Post">
	</div>
</form>

<form action="/<%= @review.id %>" method="POST">
    <% if(@review.id != "") %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
    <div>
        <label>Title</label>
        <input type="text" name="title" placeholder="Enter a Title" value="<%= @review.title %>">
    </div>
    <div>
        <label>Content</label>
        <textarea name="body" placeholder="The Content" value="<%= @review.body %>"><%= @review.body %></textarea>
    </div>
    <div>
        <label>Enter local Image address</label>
        <input type="text" name="img" placeholder="Enter a image" value="<%= @review.img %>">
    </div>
    <div>
        <input type="submit" value="Save Review">
    </div>
</form>

